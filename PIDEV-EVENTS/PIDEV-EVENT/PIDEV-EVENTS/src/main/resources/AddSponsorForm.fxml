                    </VBox>

                    <!-- EMAIL -->
                    <VBox spacing="5">
                        <Label text="Email" style="-fx-font-weight: bold; -fx-text-fill: #4a5568;"/>
                        <TextField fx:id="emailField" promptText="contact@sponsor.com"
