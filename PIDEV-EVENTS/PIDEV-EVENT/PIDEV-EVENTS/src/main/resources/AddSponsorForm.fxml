                    </VBox>

                    <!-- IMAGE -->
                    <VBox spacing="5">
                        <Label text="Logo du sponsor" style="-fx-font-weight: bold; -fx-text-fill: #4a5568;"/>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <TextField fx:id="imagePathField" promptText="Chemin ou URL du logo" HBox.hgrow="ALWAYS"
                                       style="-fx-background-radius: 12; -fx-border-radius: 12; -fx-background-color: #f9fafb; -fx-border-color: #e2e8f0; -fx-border-width: 1.5; -fx-padding: 12 15;"/>
                            <Button text="Parcourir..." onAction="#handleChooseImage"
                                    style="-fx-background-color: #8b5cf6; -fx-text-fill: white; -fx-background-radius: 12; -fx-padding: 12 25; -fx-font-weight: bold; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(139,92,246,0.3), 8, 0, 0, 2);"/>
                        </HBox>
                        <StackPane style="-fx-padding: 10 0 0 0;">
                            <ImageView fx:id="sponsorImageView" fitWidth="120" fitHeight="120" preserveRatio="false"
                                       style="-fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #e2e8f0; -fx-border-width: 1; -fx-background-color: #f9fafb;"/>
                        </StackPane>
                    </VBox>

                    <Separator style="-fx-background-color: #e2e8f0; -fx-padding: 10 0;"/>

                    <!-- BOUTONS -->
                    <HBox spacing="15" alignment="CENTER_RIGHT">
                        <Button text="Annuler" fx:id="cancelBtn" onAction="#handleCancel"
                                style="-fx-background-color: transparent; -fx-border-color: #8b5cf6; -fx-text-fill: #8b5cf6; -fx-border-width: 2; -fx-border-radius: 25; -fx-background-radius: 25; -fx-padding: 12 30; -fx-font-weight: bold; -fx-cursor: hand;"/>
                        <Button text="Ajouter le sponsor" fx:id="saveBtn" onAction="#handleSaveSponsor"
                                style="-fx-background-color: #8b5cf6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 25; -fx-padding: 12 30; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(139,92,246,0.3), 10, 0, 0, 3);"/>
                    </HBox>

                    <!-- ========== BOUTON RETOUR EN BAS (comme les Ã©vÃ©nements) ========== -->
