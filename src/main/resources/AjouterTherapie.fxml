<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.AjouterTherapie"
            stylesheets="@styles/app.css">

    <!-- SIDEBAR (نفسها) -->
    <left>
        <VBox styleClass="sidebar" spacing="14">

            <HBox styleClass="sidebar-header" spacing="10">
                <ImageView fitWidth="36" fitHeight="36" preserveRatio="true">
                    <image><Image url="@assets/logo.png"/></image>
                </ImageView>
                <VBox>
                    <Label text="AutiCare" styleClass="app-title"/>
                    <Label text="Plateforme éducative" styleClass="app-subtitle"/>
                </VBox>
            </HBox>

            <VBox spacing="6">
                <Label text="Connecté en tant que" styleClass="muted"/>
                <Label fx:id="userRoleLabel" text="Etudiant" styleClass="badge"/>
            </VBox>

            <VBox spacing="8" styleClass="menu">
                <Button fx:id="btnMenuUsers" text="Gestion Utilisateur" styleClass="menu-item"/>
                <Button fx:id="btnMenuCours" text="Gestion Cours &amp; Evaluations" styleClass="menu-item"/>
                <Button fx:id="btnMenuEmploi" text="Gestion Emploi" styleClass="menu-item"/>


                <!-- Consultations (row + chevron) -->
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="menu-row">
                    <Button fx:id="btnGestionConsultations"
                            text="Gestion Consultations"
                            styleClass="menu-item"
                            HBox.hgrow="ALWAYS"
                            maxWidth="1.7976931348623157E308"/>
                    <ToggleButton fx:id="tbConsultations"
                                  text="▸"
                                  styleClass="chevron-btn"/>
                </HBox>

                <!-- submenu -->
                <VBox fx:id="consultationsSubMenu"
                      visible="false" managed="false"
                      spacing="8"
                      styleClass="submenu">
                    <Button fx:id="btnMenuSuivie" text="Suivie" styleClass="submenu-item"/>
                    <Button fx:id="btnMenuTherapie" text="Thérapie" styleClass="submenu-item"/>
                </VBox>

                <Button fx:id="btnMenuEvents" text="Gestion Evenements" styleClass="menu-item"/>
                <Button fx:id="btnMenuJeux" text="Gestion Jeux" styleClass="menu-item"/>
            </VBox>

        </VBox>
    </left>

    <!-- CONTENT -->
    <center>
        <ScrollPane fx:id="mainScroll"
                    fitToWidth="true"
                    vbarPolicy="AS_NEEDED"
                    hbarPolicy="NEVER"
                    styleClass="main-scroll">

            <content>
                <VBox styleClass="page" spacing="16">

                    <!-- TOP HEADER (titre à gauche / +Ajouter à droite) -->
                    <HBox alignment="CENTER_LEFT" styleClass="page-top">
                        <VBox spacing="4" HBox.hgrow="ALWAYS">
                            <Label text="Gestion des Thérapies" styleClass="page-title"/>
                            <Label text="Gérez les exercices thérapeutiques et leurs informations"
                                   styleClass="page-subtitle"/>
                        </VBox>

                        <Button fx:id="btnAjouter" text="+ Ajouter" styleClass="btn-primary"/>
                    </HBox>

                    <!-- SEARCH full width -->
                    <TextField fx:id="searchField"
                               promptText="Rechercher une thérapie..."
                               styleClass="search-lg"/>

                    <!-- COUNT -->
                    <Label fx:id="countLabel" text="0 Thérapies" styleClass="counter-label"/>

                    <!-- Empty -->
                    <VBox fx:id="emptyBox"
                          visible="false" managed="false"
                          spacing="6"
                          styleClass="empty-box">
                        <Label text="Aucune thérapie trouvée" styleClass="empty-title"/>
                        <Label text="Essayez une autre recherche ou ajoutez une thérapie." styleClass="empty-sub"/>
                    </VBox>

                    <!-- CARDS -->
                    <FlowPane fx:id="cardsPane"
                              hgap="22" vgap="22"
                              prefWrapLength="980"
                              styleClass="cards-wrap"/>

                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
