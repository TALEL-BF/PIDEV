<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane prefWidth="1300.0" prefHeight="800.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.PasserEvaluation">

    <children>
        <HBox prefWidth="1300.0" prefHeight="800.0">

            <!-- ================= SIDEBAR ================= -->
            <VBox prefWidth="220.0"
                  minWidth="220.0"
                  maxWidth="220.0"
                  spacing="15"
                  style="-fx-background-color: linear-gradient(to bottom, #7B2FF7, #5F0FFF); -fx-padding:20;">

                <HBox alignment="CENTER_LEFT" spacing="5">
                    <VBox alignment="CENTER">
                        <ImageView fitHeight="32.0" fitWidth="32.0" preserveRatio="true">
                            <image>
                                <Image url="@images/logo.png"/>
                            </image>
                        </ImageView>
                    </VBox>
                    <Label text="AutiCare"
                           style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;">
                        <font>
                            <Font size="20.0"/>
                        </font>
                    </Label>
                </HBox>

                <Separator/>

                <Button text="Gestion des utilisateurs"
                        style="-fx-background-color: transparent; -fx-text-fill:white; -fx-cursor: hand;"/>

                <Button text="Gestion des cours"
                        style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill:white; -fx-background-radius:10; -fx-cursor: hand;"/>

                <Button text="Gestion des plans"
                        style="-fx-background-color: transparent; -fx-text-fill:white; -fx-cursor: hand;"/>

                <Button text="Gestion des événements"
                        style="-fx-background-color: transparent; -fx-text-fill:white; -fx-cursor: hand;"/>

                <Button text="Gestion des suivie consultation"
                        style="-fx-background-color: transparent; -fx-text-fill:white; -fx-cursor: hand; -fx-wrap-text: true;"/>

                <Button text="Gestion des jeux"
                        style="-fx-background-color: transparent; -fx-text-fill:white; -fx-cursor: hand;"/>

                <VBox VBox.vgrow="ALWAYS" />

                <Button text="Déconnexion"
                        style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill:white; -fx-cursor: hand; -fx-background-radius:10;"/>

            </VBox>

            <!-- ================= CONTENU PRINCIPAL (QUIZ) AVEC SCROLL ================= -->
            <ScrollPane fitToWidth="true" HBox.hgrow="ALWAYS"
                        style="-fx-background: #F0F8FF; -fx-border-width: 0;">
                <content>
                    <VBox spacing="25" style="-fx-padding: 30; -fx-background-color: #F0F8FF;">

                        <!-- En-tête avec progression -->
                        <VBox spacing="15">
                            <HBox alignment="CENTER_LEFT" spacing="20">
                                <Button fx:id="retourButton" text="← Quitter"
                                        style="-fx-background-color: transparent; -fx-text-fill: #666; -fx-font-size: 16px; -fx-cursor: hand;"/>

                                <Region HBox.hgrow="ALWAYS"/>

                                <Label fx:id="titreCoursLabel" text=""
                                       style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #7B2FF7;"/>

                                <Region HBox.hgrow="ALWAYS"/>

                                <Label fx:id="scoreLabel" text="Score: 0"
                                       style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #28A745;
                                              -fx-background-color: white; -fx-padding: 8 20; -fx-background-radius: 20;
                                              -fx-border-color: #28A745; -fx-border-radius: 20; -fx-border-width: 2;"/>
                            </HBox>

                            <!-- Barre de progression -->
                            <HBox spacing="10" alignment="CENTER">
                                <Label text="Progression:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #666;"/>
                                <ProgressBar fx:id="progressBar" prefWidth="400" progress="0"
                                             style="-fx-accent: #7B2FF7;"/>
                                <Label fx:id="progressLabel" text="0/0"
                                       style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #7B2FF7;"/>
                            </HBox>
                        </VBox>

                        <!-- Zone de la question courante -->
                        <VBox spacing="30" VBox.vgrow="ALWAYS" alignment="CENTER">

                            <!-- Carte de la question -->
                            <VBox fx:id="questionCard" spacing="25" maxWidth="900"
                                  style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-radius: 20;
                                         -fx-border-color: #7B2FF7; -fx-border-width: 3; -fx-padding: 40;
                                         -fx-effect: dropshadow(three-pass-box, rgba(123,47,247,0.2), 15, 0, 0, 5);">

                                <!-- En-tête de la question -->
                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <Label fx:id="questionNumeroLabel" text="Question 1"
                                           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #7B2FF7;
                                                  -fx-background-color: #F0E6FF; -fx-padding: 8 20; -fx-background-radius: 25;"/>
                                    <Region HBox.hgrow="ALWAYS"/>
                                    <Label fx:id="questionScoreLabel" text="2 points"
                                           style="-fx-font-size: 16px; -fx-text-fill: #FFA500; -fx-font-weight: bold;
                                                  -fx-background-color: #FFF4E5; -fx-padding: 8 20; -fx-background-radius: 25;"/>
                                </HBox>

                                <!-- Texte de la question -->
                                <Label fx:id="questionTextLabel" wrapText="true"
                                       style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #333333; -fx-padding: 20 0;"/>

                                <!-- Séparateur -->
                                <Separator/>

                                <!-- Options de réponse -->
                                <VBox spacing="15" alignment="CENTER">
                                    <Label text="Choisissez votre réponse:"
                                           style="-fx-font-size: 18px; -fx-text-fill: #666666;"/>

                                    <fx:define>
                                        <ToggleGroup fx:id="reponsesGroup"/>
                                    </fx:define>

                                    <RadioButton fx:id="choix1Radio" toggleGroup="$reponsesGroup"
                                                 style="-fx-font-size: 18px; -fx-padding: 15; -fx-background-color: #F5F5F5;
                                                        -fx-background-radius: 15; -fx-maxWidth: Infinity; -fx-cursor: hand;"
                                                 onMouseEntered="#survolChoix1" onMouseExited="#finSurvolChoix1"/>
                                    <RadioButton fx:id="choix2Radio" toggleGroup="$reponsesGroup"
                                                 style="-fx-font-size: 18px; -fx-padding: 15; -fx-background-color: #F5F5F5;
                                                        -fx-background-radius: 15; -fx-maxWidth: Infinity; -fx-cursor: hand;"
                                                 onMouseEntered="#survolChoix2" onMouseExited="#finSurvolChoix2"/>
                                    <RadioButton fx:id="choix3Radio" toggleGroup="$reponsesGroup"
                                                 style="-fx-font-size: 18px; -fx-padding: 15; -fx-background-color: #F5F5F5;
                                                        -fx-background-radius: 15; -fx-maxWidth: Infinity; -fx-cursor: hand;"
                                                 onMouseEntered="#survolChoix3" onMouseExited="#finSurvolChoix3"/>
                                </VBox>
                            </VBox>

                            <!-- Message de feedback après réponse -->
                            <Label fx:id="feedbackLabel" alignment="CENTER" maxWidth="900"
                                   style="-fx-font-size: 18px; -fx-padding: 15; -fx-background-radius: 15;"/>

                            <!-- Boutons de navigation -->
                            <HBox spacing="20" alignment="CENTER" style="-fx-padding: 20;">
                                <Button fx:id="precedentButton" text="← Précédent"
                                        style="-fx-background-color: transparent; -fx-border-color: #7B2FF7; -fx-text-fill: #7B2FF7;
                                               -fx-border-radius: 25; -fx-padding: 12 30; -fx-font-size: 16px;
                                               -fx-font-weight: bold; -fx-cursor: hand;"
                                        onMouseEntered="#survolPrecedent" onMouseExited="#finSurvolPrecedent"/>

                                <Button fx:id="suivantButton" text="Suivant →"
                                        style="-fx-background-color: #7B2FF7; -fx-text-fill: white; -fx-background-radius: 25;
                                               -fx-padding: 12 30; -fx-font-size: 16px; -fx-font-weight: bold; -fx-cursor: hand;"
                                        onMouseEntered="#survolSuivant" onMouseExited="#finSurvolSuivant"/>

                                <Button fx:id="terminerButton" text="Terminer le quiz"
                                        style="-fx-background-color: #28A745; -fx-text-fill: white; -fx-background-radius: 25;
                                               -fx-padding: 12 30; -fx-font-size: 16px; -fx-font-weight: bold; -fx-cursor: hand;"
                                        onMouseEntered="#survolTerminer" onMouseExited="#finSurvolTerminer"
                                        visible="false" managed="false"/>
                            </HBox>
                        </VBox>
                    </VBox>
                </content>
            </ScrollPane>
        </HBox>
    </children>

</AnchorPane>