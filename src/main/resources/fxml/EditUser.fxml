<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.layout.StackPane?>

<VBox spacing="25.0" styleClass="main-bg" stylesheets="@../styles.css"
    xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.auticare.controller.UserFormController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
    <children>
        <HBox spacing="40.0" styleClass="card">
            <children>
                <VBox alignment="TOP_CENTER" spacing="20.0">
                    <children>
                        <Label styleClass="form-label" text="PHOTO DE PROFIL" />
                        <StackPane>
                            <children>
                                <Circle fill="#f1f2f6" radius="60.0" stroke="#7b2ff7"
                                    strokeType="INSIDE" strokeWidth="2.0" />
                                <ImageView fx:id="photoPreview" fitHeight="110.0" fitWidth="110.0"
                                    pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="https://via.placeholder.com/110" />
                                    </image>
                                </ImageView>
                            </children>
                        </StackPane>
                        <Button fx:id="btnChoosePhoto" mnemonicParsing="false"
                            onAction="#handleChoosePhoto" styleClass="btn-secondary"
                            text="Changer la photo" />
                        <Label fx:id="errorLabel" textFill="#e74c3c" wrapText="true" />
                    </children>
                </VBox>
                <VBox spacing="20.0" HBox.hgrow="ALWAYS">
                    <children>
                        <HBox spacing="20.0">
                            <children>
                                <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label styleClass="form-label" text="NOM COMPLET" />
                                        <TextField fx:id="nameField" prefHeight="45.0"
                                            styleClass="text-field-custom" />
                                    </children>
                                </VBox>
                                <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label styleClass="form-label" text="EMAIL" />
                                        <TextField fx:id="emailField" prefHeight="45.0"
                                            styleClass="text-field-custom" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                        <HBox spacing="20.0">
                            <children>
                                <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label styleClass="form-label" text="TÉLÉPHONE" />
                                        <TextField fx:id="phoneField" prefHeight="45.0"
                                            styleClass="text-field-custom" />
                                    </children>
                                </VBox>
                                <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label styleClass="form-label" text="RÔLE" />
                                        <ComboBox fx:id="roleCombo"
                                            maxWidth="1.7976931348623157E308" prefHeight="45.0"
                                            style="-fx-background-radius: 8;" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                        <HBox spacing="20.0">
                            <children>
                                <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label styleClass="form-label" text="STATUT" />
                                        <ComboBox fx:id="statusCombo"
                                            maxWidth="1.7976931348623157E308" prefHeight="45.0"
                                            style="-fx-background-radius: 8;" />
                                    </children>
                                </VBox>
                                <VBox spacing="8.0" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>

                        <VBox spacing="10.0"
                            style="-fx-border-color: #f1f2f6; -fx-border-width: 1 0 0 0; -fx-padding: 10 0 0 0;">
                            <children>
                                <CheckBox fx:id="changePasswordToggle" mnemonicParsing="false"
                                    text="Modifier le mot de passe" />
                                <VBox fx:id="passwordContainer" spacing="8.0" visible="false">
                                    <children>
                                        <Label styleClass="form-label" text="NOUVEAU MOT DE PASSE" />
                                        <PasswordField fx:id="passwordField" prefHeight="45.0"
                                            styleClass="text-field-custom" />
                                    </children>
                                </VBox>
                            </children>
                        </VBox>

                        <HBox alignment="CENTER_RIGHT" spacing="15.0">
                            <children>
                                <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#close"
                                    prefHeight="45.0" prefWidth="120.0" styleClass="btn-secondary"
                                    text="Annuler" />
                                <Button fx:id="btnSave" mnemonicParsing="false" onAction="#save"
                                    prefHeight="45.0" prefWidth="150.0" styleClass="btn-primary"
                                    text="METTRE À JOUR" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
        </HBox>
    </children>
</VBox>