<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="25.0" styleClass="main-bg" stylesheets="@../styles.css"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.auticare.controller.UserFxController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
    <children>
        <!-- Header with Title and Add Button -->
        <HBox alignment="CENTER_LEFT">
            <children>
                <VBox>
                    <children>
                        <Label styleClass="page-title" text="Gestion des Utilisateurs" />
                        <Label styleClass="page-subtitle" text="Gérez les membres de la plateforme" />
                    </children>
                </VBox>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="btnAddUser" mnemonicParsing="false" onAction="#showAddUserParams"
                        styleClass="btn-primary" text="+ Ajouter un membre" />
            </children>
        </HBox>

        <!-- Filters Section in Modern Card -->
        <HBox alignment="CENTER_LEFT" prefHeight="90.0" spacing="20.0" styleClass="modern-card">
            <children>
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label styleClass="form-label" text="RECHERCHE" />
                        <TextField fx:id="searchField" prefHeight="40.0"
                                   promptText="Rechercher par nom ou email..."
                                   styleClass="text-field-custom" />
                    </children>
                </VBox>
                <VBox layoutX="30.0" layoutY="20.0" prefWidth="180.0" spacing="5.0">
                    <children>
                        <Label styleClass="form-label" text="FILTRER PAR RÔLE" />
                        <ComboBox fx:id="roleFilter" prefHeight="40.0" prefWidth="180.0"
                                  promptText="Tous les rôles" style="-fx-background-radius: 8;" />
                    </children>
                </VBox>
                <VBox layoutX="520.0" layoutY="20.0" prefWidth="180.0" spacing="5.0">
                    <children>
                        <Label styleClass="form-label" text="STATUT" />
                        <ComboBox fx:id="statusFilter" prefHeight="40.0" prefWidth="180.0"
                                  promptText="Tous les statuts" style="-fx-background-radius: 8;" />
                    </children>
                </VBox>
            </children>
        </HBox>

        <!-- Table Card -->
        <VBox styleClass="modern-card" VBox.vgrow="ALWAYS">
            <children>
                <TableView fx:id="userTable" prefHeight="400.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colUser" prefWidth="280.0" text="UTILISATEUR" />
                        <TableColumn fx:id="colContact" prefWidth="250.0" text="CONTACT" />
                        <TableColumn fx:id="colRole" prefWidth="130.0" text="RÔLE" />
                        <TableColumn fx:id="colStatus" prefWidth="120.0" text="STATUT" />
                        <TableColumn fx:id="colActions" prefWidth="100.0" text="ACTIONS" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</VBox>