<AnchorPane prefHeight="650.0" prefWidth="900.0" stylesheets="@../styles.css"
    xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.auticare.controller.ParentDashboardController">
    <children>
        <BorderPane prefHeight="650.0" prefWidth="900.0" AnchorPane.bottomAnchor="0.0"
            AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <left>
                <VBox prefWidth="250.0" spacing="10.0" styleClass="sidebar"
                    BorderPane.alignment="CENTER">
                    <children>
                        <Label text="PARENT SPACE" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="30.0" left="20.0" top="30.0" />
                            </VBox.margin>
                        </Label>
                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                            styleClass="sidebar-btn-active" text="Tableau de bord" />
                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                            styleClass="sidebar-btn" text="Mes Enfants" />
                        <VBox VBox.vgrow="ALWAYS" />
