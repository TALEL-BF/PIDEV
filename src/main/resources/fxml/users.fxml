<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
    prefHeight="700.0" prefWidth="1100.0" stylesheets="@../styles.css"
    xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.auticare.controller.UserFxController">

    <!-- Sidebar -->
    <left>
        <VBox prefHeight="700.0" prefWidth="240.0" styleClass="sidebar"
            BorderPane.alignment="CENTER">
            <children>
                <!-- Logo Area -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <padding>
                        <Insets bottom="30.0" left="20.0" top="30.0" />
                    </padding>
                    <children>
                        <!-- Placeholder/Icon for logo -->
                        <Circle fill="#ffffff33" radius="16.0" stroke="TRANSPARENT" />
                        <VBox>
                            <children>
                                <Label styleClass="sidebar-logo-text" text="AutiCare" />
                                <Label text="Plateforme éducative" textFill="#ffffffcc">
                                    <font>
                                        <Font size="10.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <!-- Menu Items -->
                <Button graphicTextGap="15.0" mnemonicParsing="false" prefWidth="220.0"
                    styleClass="sidebar-btn-active" text="Gestion des utilisateurs">
                    <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" />
                    </VBox.margin>
                </Button>

                <Button graphicTextGap="15.0" layoutX="10.0" layoutY="152.0" mnemonicParsing="false"
                    prefWidth="250.0" styleClass="sidebar-btn" text="Gestion des évaluations" />
                <Button graphicTextGap="15.0" layoutX="10.0" layoutY="202.0" mnemonicParsing="false"
                    prefWidth="250.0" styleClass="sidebar-btn" text="Gestion des consultations" />
                <Button graphicTextGap="15.0" layoutX="10.0" layoutY="252.0" mnemonicParsing="false"
                    prefWidth="250.0" styleClass="sidebar-btn" text="Gestion des événements" />
                <Button graphicTextGap="15.0" layoutX="10.0" layoutY="302.0" mnemonicParsing="false"
                    prefWidth="250.0" styleClass="sidebar-btn" text="Gestion des réclamations" />

                <Region VBox.vgrow="ALWAYS" />

                <!-- User Profile Footer -->
                <VBox styleClass="sidebar-footer">
                    <children>
                        <Label text="Connecté en tant que" textFill="#ffffff99">
                            <font>
                                <Font size="10.0" />
                            </font>
                        </Label>
                        <Label text="Administrateur" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
            </children>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="30.0" left="40.0" right="40.0" top="40.0" />
            </padding>
            <children>

                <!-- Header -->
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <VBox>
                            <children>
                                <Label styleClass="page-title" text="Gestion des Utilisateurs" />
                                <Label styleClass="page-subtitle"
                                    text="Gérez les apprenants, parents et professionnels AutiCare" />
                            </children>
                        </VBox>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnAddUser" mnemonicParsing="false"
                            onAction="#showAddUserParams" styleClass="btn-add-user"
                            text="+  Nouvel utilisateur" />
                    </children>
                </HBox>

                <!-- Filters Bar -->
                <HBox alignment="CENTER_LEFT" spacing="15.0"
                    style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 10;">
                    <children>
                        <TextField fx:id="searchField" prefWidth="400.0"
                            promptText="Rechercher par nom ou email..." styleClass="search-box" />
                        <Region HBox.hgrow="ALWAYS" />
                        <ComboBox fx:id="roleFilter" prefWidth="150.0" promptText="Tous les rôles"
                            styleClass="filter-combo" />
                        <ComboBox fx:id="statusFilter" prefWidth="150.0"
                            promptText="Tous les statuts" styleClass="filter-combo" />
                    </children>
                </HBox>

                <!-- Table -->
                <TableView fx:id="userTable" styleClass="table-view" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colUser" prefWidth="250.0" text="UTILISATEUR" />
                        <TableColumn fx:id="colContact" prefWidth="250.0" text="CONTACT" />
                        <TableColumn fx:id="colRole" prefWidth="120.0" text="RÔLE" />
                        <TableColumn fx:id="colStatus" prefWidth="100.0" text="STATUT" />

                        <TableColumn fx:id="colLastActivity" prefWidth="120.0"
                            text="DERNIÈRE ACTIVITE" />
                        <TableColumn fx:id="colActions" prefWidth="80.0" text="ACTIONS" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

            </children>
        </VBox>
    </center>
</BorderPane>