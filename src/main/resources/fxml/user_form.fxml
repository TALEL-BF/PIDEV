<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="400.0" spacing="15.0" stylesheets="@../styles.css"
    xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.auticare.controller.UserFormController">
    <padding>
        <Insets bottom="20.0" left="30.0" right="30.0" top="10.0" />
    </padding>
    <children>
        <Label styleClass="dialog-header" text="Informations de l'utilisateur" />

        <VBox alignment="CENTER" spacing="10.0">
            <children>
                <Label styleClass="form-label" text="PHOTO DE PROFIL" />
                <ImageView fx:id="photoPreview" fitHeight="100.0" fitWidth="100.0"
                    pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="https://via.placeholder.com/100" />
                    </image>
                </ImageView>
                <Button fx:id="btnChoosePhoto" mnemonicParsing="false" onAction="#handleChoosePhoto"
                    styleClass="btn-secondary-outline" text="Choisir une photo" />
            </children>
        </VBox>

        <VBox spacing="5.0">
            <children>
                <Label styleClass="form-label" text="NOM COMPLET" />
                <TextField fx:id="nameField" promptText="Ex: Jean Dupont"
                    styleClass="text-field-custom" />
            </children>
        </VBox>

        <VBox spacing="5.0">
            <children>
                <Label styleClass="form-label" text="EMAIL" />
                <TextField fx:id="emailField" promptText="jean.dupont@email.com"
                    styleClass="text-field-custom" />
            </children>
        </VBox>

        <VBox spacing="5.0">
            <children>
                <Label styleClass="form-label" text="TELEPHONE" />
                <TextField fx:id="phoneField" promptText="06 12 34 56 78"
                    styleClass="text-field-custom" />
            </children>
        </VBox>

        <VBox spacing="5.0">
            <children>
                <Label styleClass="form-label" text="MOT DE PASSE" />
                <PasswordField fx:id="passwordField" promptText="******"
                    styleClass="text-field-custom" />
            </children>
        </VBox>

        <HBox spacing="15.0">
            <children>
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label styleClass="form-label" text="RÔLE" />
                        <ComboBox fx:id="roleCombo" maxWidth="1.7976931348623157E308"
                            promptText="Sélectionner" styleClass="combo-box-custom" />
                    </children>
                </VBox>
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label styleClass="form-label" text="STATUT" />
                        <ComboBox fx:id="statusCombo" maxWidth="1.7976931348623157E308"
                            promptText="Sélectionner" styleClass="combo-box-custom" />
                    </children>
                </VBox>
            </children>
        </HBox>

        <Label fx:id="errorLabel" textFill="#e74c3c" wrapText="true" />

        <HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-padding: 20 0 0 0;">
            <children>
                <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false"
                    onAction="#close" styleClass="btn-secondary" text="Annuler" />
                <Button fx:id="btnSave" defaultButton="true" mnemonicParsing="false"
                    onAction="#save" styleClass="btn-primary" text="Enregistrer" />
            </children>
        </HBox>
    </children>
</VBox>