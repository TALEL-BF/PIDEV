<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="25.0" styleClass="main-bg" stylesheets="@../styles.css"
    xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.auticare.controller.CourseController">
    <children>
        <HBox alignment="CENTER_LEFT">
            <children>
                <VBox>
                    <children>
                        <Label styleClass="page-title" text="Gestion des Cours" />
                        <Label styleClass="page-subtitle"
                            text="Administrez le contenu éducatif et les modules d'apprentissage" />
                    </children>
                </VBox>
                <Region HBox.hgrow="ALWAYS" />
                <Button mnemonicParsing="false" styleClass="btn-primary" text="Ajouter un cours" />
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" prefHeight="80.0" spacing="20.0" styleClass="card">
            <children>
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label styleClass="form-label" text="RECHERCHE" />
                        <TextField prefHeight="40.0" promptText="Rechercher un cours..."
                            styleClass="text-field-custom" />
                    </children>
                </VBox>
            </children>
        </HBox>
        <VBox styleClass="card" VBox.vgrow="ALWAYS">
            <children>
                <TableView fx:id="courseTable" prefHeight="400.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colTitle" prefWidth="300.0" text="TITRE DU COURS" />
                        <TableColumn fx:id="colCategory" prefWidth="200.0" text="CATÉGORIE" />
                        <TableColumn fx:id="colAuthor" prefWidth="200.0" text="AUTEUR" />
                        <TableColumn fx:id="colActions" prefWidth="150.0" text="ACTIONS" />
                    </columns>
                </TableView>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</VBox>